@page
@model ProtoLMS.Pages.EnrollModel
@{
    ViewData["Title"] = "Enrollment";

}

<link href="../assets/dist/css/bootstrap.min.css" rel="stylesheet">



<!-- Custom styles for this template -->
<link href="checkout.css" rel="stylesheet">

<div class="container">
    <main>
        <div class="py-5 text-center">
            <h2>Enrollment</h2>
            <p class="lead">Use this form to enroll a new organization with ProtoLMS. An organization can be a school, a business, or any other group that needs LMS access.</p>
        </div>

        <div class="col-md-7 col-lg-8">
            <h4 class="mb-3">Organization Information</h4>
            <form class="needs-validation" method="post" novalidate>
                <div class="row g-3">
                    <div class="col-sm-12">
                        <label for="orgName" class="form-label">Name</label>
                        <input asp-for="FormData!.OrgName" type=" text" class="form-control" placeholder="" required>
                        <div class="invalid-feedback">
                            Valid organization name is required.
                        </div>
                    </div>

                    <hr class="my-4">

                    <h4 class="mb-3">Primary Administrator Account</h4>
                    <p class="small">This information will be used to create the primary administrator account which takes ownership of this organization. This account has the ability to invite other administrators and control their permissions.</p>



                    <div class="col-sm-6">
                        <label for="firstName" class="form-label">First name</label>
                        <input asp-for="FormData!.FirstName" type="text" class="form-control" placeholder="" required>
                        <div class="invalid-feedback">
                            Valid organization name is required.
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <label for="lastName" class="form-label">Last name</label>
                        <input asp-for="FormData!.LastName" type="text" class="form-control" placeholder="" required>
                        <div class="invalid-feedback">
                            Valid last name is required.
                        </div>
                    </div>



                    <div class="col-12">
                        <label for="username" class="form-label">Username</label>
                        <div class="input-group has-validation">
                            <input asp-for="FormData!.Username" type="text" class="form-control" placeholder="" required>
                            <div class="invalid-feedback">
                                Your username is required.
                            </div>
                        </div>
                    </div>

                    <div class="col-12">
                        <label for="password" class="form-label">Password</label>
                        <div class="input-group has-validation">
                            <input asp-for="FormData!.Password" type="password" class="form-control" placeholder="" required>
                            <div class="invalid-feedback">
                                Your password is required.
                            </div>
                        </div>
                    </div>


                    <button class="w-100 btn btn-primary btn-lg" type="submit">Enroll organization</button>
            </form>
        </div>
    </main>

